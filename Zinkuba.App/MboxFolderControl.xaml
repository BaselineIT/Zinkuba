<UserControl x:Class="Zinkuba.App.MboxFolderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    <Grid Margin="0,5,0,0">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
            <Button Content=" Remove " Click="RemoveItem"/>
            <Label Content="Mbox File" Margin="0" Width="68" />
            <TextBox x:Name="MboxFile" Height="22" TextWrapping="NoWrap" Width="280" Text="{Binding MboxPath}" />
            <Button Content="......" Width="20" Height="20" Click="BrowseForMbox" Margin="5,0,0,0"/>
            <Label Content="Folder Name" Margin="0" />
            <TextBox x:Name="FolderName" Height="22" TextWrapping="NoWrap" Width="146" Text="{Binding FolderPath}" />
        </StackPanel>
    </Grid>
</UserControl>
